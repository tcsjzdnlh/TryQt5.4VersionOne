/* ----------------- QLabel ----------------- */
QLabel
{
	font: 20px;
	/*color: rgb(10, 1, 220);*/
	/* color: red; */
	/* color: rgb(100, 201, 220); */
	
	color: rgb( 0, 0, 127 );
